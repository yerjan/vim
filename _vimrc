" vi non compantible
set nocompatible
set number
set incsearch
set hlsearch

" insert space as tab, tab space 4, autoindent 4
set tabstop=4 expandtab shiftwidth=4

" C-indent
set cindent

" autoindent
set autoindent

" works for multi-language
set smartindent

" backspace cannot erase Indent, EOF, start
set backspace=2
